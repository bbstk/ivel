// mixins

title = 30px Oswald
text = 14px Raleway

flex()
	-webkit-display flex
	-ms-display flex
	display flex
align(n)
	-webkit-align-items n
	align-items n
direction(n)
	-webkit-flex-direction n
	-ms-flex-direction n
	flex-direction n
just-content(n)
	-webkit-justify-content n
	justify-content n
wrap()
	-webkit-flex-wrap wrap
	flex-wrap wrap
	
border-box(arg)
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding arg


transition(arg)
	-webkit-transition arg
	-moz-transition arg
	-o-transition arg
	transition arg

// general

body
	background #222

// specific

@keyframes turn {
	0% {
		transform: rotateY(-25deg) rotateX(-20deg);
	}
	40% {
		transform: rotateY(2deg) rotateX(0);
	}
	100% {
		transform: rotateY(2deg) rotateX(0);
	}
}

@keyframes expand
	0%
		background: radial-gradient(circle, #111, rgba(255, 255, 255, 0.5) 80%);
	60%
		background: radial-gradient(circle, #111, rgba(255, 255, 255, 0.5) 80%);
	62%
		background: radial-gradient(circle, white, rgba(255, 255, 255, 0.5) 80%);
	78%
		background: radial-gradient(circle, #111, rgba(255, 255, 255, 0.5) 80%);

@keyframes colour
	0%
		border 1px solid lighten(skyblue, 10%)
	70%
		border 1px solid lighten(skyblue, 10%)
	72%
		border 1px solid red
	75%
		border 1px solid lighten(skyblue, 10%)

.camera-container
	height 100px
	width 100px
	margin 30px
	position relative
	perspective 300px
	.cube
		animation: turn 1s alternate 2 linear;
		position: relative;
		width: 75px;
		transform rotate3d(20deg)
		transform-style: preserve-3d;
		transform: rotateY(-25deg) rotateX(-20deg);
		top 30%
		figure
			color white
			margin: 0;
			width: 50px;
			height: 50px;
			display: block;
			position: absolute;
		.left, .right
			width: 75px
			height 30px
		.top, .bottom
			height 75px
		.back
			background #999
			height 30px
		.right {
			background linear-gradient(45deg, white, #333)
			transform: rotateY(-270deg) translateZ(-75px);
			transform-origin: top right;
		}
		.left {
			background linear-gradient(-50deg, white, lighten(skyblue, 60%), #999)
			transform: rotateY(270deg) translateZ(-50px);
			transform-origin: left;
		}
		.top
			background linear-gradient(110deg, #999, lighten(skyblue, 70%), white)
			transform: translateZ(75px) rotateX(-90deg);
			transform-origin: top;
			/* &:before
				content " "
				background linear-gradient(90deg, #333, #ccc 60%, #555)
				display block
				height 40px
				width 8px
				
				position absolute
				top: -40px
				left 21px
			*/
		.bottom
			background linear-gradient(180deg, #ddd, #777)
			transform: rotateX(-90deg) translateZ(-45px);
			transform-origin: bottom;
		.front
			flex()
			just-content center
			align center
			background linear-gradient(-70deg, white, lighten(skyblue, 50%), white)
			height 30px
			transform translateZ(75px)
			.camera-eye
				flex()
				just-content center
				align center
				background: linear-gradient(45deg, #222, #444 30%, #444 35%, #222);
				border: 1px solid #222
				border-radius 3px
				height 20px
				width 30px
				.inner-eye
					flex()
					just-content center
					align center
					animation expand 1.5s 1 linear
					background: radial-gradient(circle, #111, rgba(255, 255, 255, 0.7) 90%);
					border-radius 50%
					height 16px
					width 16px
					.yacircle
						animation colour 1.5s 1 linear
						background transparent
						border 1px solid lighten(skyblue, 10%)
						border-radius 50%
						height 12px
						width 12px

header
	border-box(30px 50px)
	flex()
	just-content space-between
	align center
	h1
		color white
		font title
		font-weight bold
main
	border-box(50px)
	background skyblue
	flex()
	direction column
	align center
	box-shadow 0 0 10px black
	p
		color white
		font text
		font-size 2rem
	form
		flex()
		just-content center
		wrap()
		max-width: 960px
		fieldset
			border none
			flex()
			margin 0
			padding 0
			input, textarea
				border-box(10px 20px)
				border 1px solid transparent
				border-radius 3px
				color #555
				font text
				font-weight bold
				margin: 10px
				outline none
				&:hover, &:focus
					background white
					box-shadow 0 0 10px darken(skyblue, 40)
					border 1px solid darken(skyblue, 30)
		fieldset.description
			height 190px
			margin 0 0 0 20px
			width 450px
			textarea
				resize none
				height 100%
				margin 10px auto
				width 100%
		section
			margin 30px 0 0 0 
			width 100%
			button
				background lighten(skyblue, 15)
				border-box(10px 20px)
				border 1px solid transparent
				border-radius 0
				color #555
				font text
				font-weight bold
				float right
				outline none
				text-transform uppercase
				&:hover, &:focus
						box-shadow 0 0 10px darken(skyblue, 40)
						border 1px solid darken(skyblue, 30)

// media

@media (max-width: 827px)
	main
		form
			width 100%
			fieldset
				input
					margin 10px 0
			fieldset.description
				width 300px

@media (max-width: 660px)
	main
		form
			fieldset
				width 100%
				input
					width 100%
			fieldset.description
				margin 0
				width 660px
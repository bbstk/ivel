// mixins

title = 30px Oswald
text = 14px Raleway

flex()
	-webkit-display flex
	-ms-display flex
	display flex
align(n)
	-webkit-align-items n
	align-items n
direction(n)
	-webkit-flex-direction n
	-ms-flex-direction n
	flex-direction n
just-content(n)
	-webkit-justify-content n
	justify-content n
wrap()
	-webkit-flex-wrap wrap
	flex-wrap wrap
	
border-box(arg)
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding arg


transition(arg)
	-webkit-transition arg
	-moz-transition arg
	-o-transition arg
	transition arg

// general

body
	background #222

// specific

@keyframes colour
	0%
		border 3px dotted lighten(skyblue, 10%)
	65%
		border 3px dotted lighten(skyblue, 10%)
	68%
		border 3px dotted red
	75%
		border 3px dotted lighten(skyblue, 10%)


@keyframes camera
	0%
		transform none
	30%
		transform: translateX(-12px) translateY(5px) skewX(25deg) skewY(-3deg) scale(0.8);
	65%
		transform: translateX(-12px) translateY(5px) skewX(25deg) skewY(-3deg) scale(0.8);
	90%
		transform none

@keyframes cam
	0%
		transform none
	50%
		transfrom translateX(-42px) translateY(-50px) skewX(-25deg) skewY(3deg) scale(0.8)
	75%
		transfrom translateX(-42px) translateY(-50px) skewX(-25deg) skewY(3deg) scale(0.8)
	95%
		transform none

.camera-container
	.circle
		flex()
		align center
		just-content center
		background: radial-gradient(circle at 50% 120%,  #bbb, white 80%, #000000 100%)
		border-radius: 50%;
		box-shadow 0 0 10px black
		height: 70px;
		width: 70px;
		perspective 1000px
		perspective-origin 50% 50%
		transform-style: preserve-3d;
		.top
			background-image url("top.png")
			background-repeat no-repeat
			background-postion center
			background-size contain 
			height 50px
			width 84px
			z-index: 2
			
			position absolute
			top -12px
			left -7px
		.camera-eye
			animation camera 10s infinite linear
			background: linear-gradient(45deg, #222, #444 30%, #444 35%, #222);
			border-radius 50%
			height 42px
			margin 10px 0 0 0
			width 42px
			
			position absolute
			left 14px
			top 14px
			.inner-eye
				flex()
				just-content center
				align center
				animation expand 1.5s 1 linear
				background: radial-gradient(circle, #111 30%, rgba(255, 255, 255, 0.7));
				border-radius 50%
				height 42px
				width 42px
				.yacircle
					animation colour 4.5s infinite linear
					border 3px dotted lighten(skyblue, 10%)
					border-radius 50%
					height 20px
					width 20px

header
	border-box(30px 50px)
	flex()
	just-content space-between
	align center
	h1
		color white
		font title
		font-weight bold

section.contacts
	border-box(50px)
	background skyblue
	flex()
	direction column
	align center
	box-shadow 0 0 10px black
	p
		color white
		font text
		font-size 2rem
	form
		flex()
		just-content center
		wrap()
		max-width: 960px
		fieldset
			border none
			flex()
			margin 0
			padding 0
			input, textarea
				border-box(10px 20px)
				border 1px solid transparent
				border-radius 3px
				color #555
				font text
				font-weight bold
				margin: 10px
				outline none
				&:hover, &:focus
					background white
					box-shadow 0 0 10px darken(skyblue, 40)
					border 1px solid darken(skyblue, 30)
		fieldset.description
			height 190px
			margin 0 0 0 20px
			width 450px
			textarea
				resize none
				height 100%
				margin 10px auto
				width 100%
		section
			margin 30px 0 0 0 
			width 100%
			button
				background lighten(skyblue, 15)
				border-box(10px 20px)
				border 1px solid transparent
				border-radius 0
				color #555
				font text
				font-weight bold
				float right
				outline none
				text-transform uppercase
				&:hover, &:focus
						box-shadow 0 0 10px darken(skyblue, 40)
						border 1px solid darken(skyblue, 30)

section.info
	border-box(50px)
	flex()
	direction row
	color #ccc
	font text
	margin 0 auto
	max-width 1100px
	article
		margin 30px
		

// media

@media (max-width: 827px)
	main
		form
			width 100%
			fieldset
				input
					margin 10px 0
			fieldset.description
				width 300px

@media (max-width: 660px)
	main
		form
			fieldset
				width 100%
				input
					width 100%
			fieldset.description
				margin 0
				width 660px
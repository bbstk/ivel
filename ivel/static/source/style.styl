// colours

// mixins

title = 30px Fira Sans
text = 14px Fira Sans

animation(arg)
	-webkit-animation arg
	-moz-animation arg
	o-animation arg
	animation arg

flex()
	display -webkit-flex
	display -ms-flex
	display flex
align(n)
	-webkit-align-items n
	align-items n
direction(n)
	-webkit-flex-direction n
	-ms-flex-direction n
	flex-direction n
just-content(n)
	-webkit-justify-content n
	justify-content n
wrap()
	-webkit-flex-wrap wrap
	flex-wrap wrap
	
border-box(arg)
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding arg
	
transition(arg)
	-webkit-transition arg
	-moz-transition arg
	-o-transition arg
	transition arg
	
// keyframes

@keyframes colour
	0%
		border 3px dotted lighten(skyblue, 10%)
	65%
		border 3px dotted lighten(skyblue, 10%)
	68%
		border 3px dotted red
	75%
		border 3px dotted lighten(skyblue, 10%)

@keyframes camera
	0%
		transform none
	30%
		transform: translateX(-12px) translateY(5px) skewX(25deg) skewY(-3deg) scale(0.78);
	65%
		transform: translateX(-12px) translateY(5px) skewX(25deg) skewY(-3deg) scale(0.78);
	90%
		transform none
		
@keyframes open
		0%
			transform rotateZ(0deg)
			transform-origin left
		10%
			transform rotateZ(0deg)
			transform-origin left
		30%
			transform rotateZ(-60deg)
			transform-origin left
		60%
			transform rotateZ(0deg)
			transform-origin left
		100%
			transform rotateZ(0deg)
			transform-origin left

@keyframes open-right
	0%
		left 120px
	25%
		left 170px
	50%
		left 170px
	75% 
		left 120px
	100% 
		left 120px

@keyframes open-left
	0%
		left 60px
	25%
		left 10px
	50%
		left 10px
	75% 
		left 60px
	100% 
		left 60px

// general
	
main
	section
		border-box(50px)
		flex()
		align center
		.page-container
			margin 0 auto
			max-width 1200px
			h2
				color white
				font text
				font-size 2rem
			article
				p

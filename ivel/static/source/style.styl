					line-height 1.5

// specific

h1, h2, h3
	text-align center

header
	border-box(10px 50px)
	background skyblue
	z-index: 10
	.container
		flex()
		just-content space-between
		align center
		max-width 1600px
		margin 0 auto
		h1
			color #222
			font title
			font-weight bold

// drawings

.barrier-container 
	.barrier
		height: 70px
		margin-left -30px
		position relative
		.base
			background linear-gradient(90deg, darken(tomato, 25), darken(tomato, 20) 8px, tomato 25px, darken(tomato, 15) 30px, 30px, darken(tomato, 15))
			box-shadow -3px -3px 7px #000
			border-radius 5px 5px 0 0 
			height 60px
			width 30px
			position absolute
			bottom 0
		.moving
			flex()
			just-content center
			align center
			animation(open 20s infinite)
			border-radius:  3px;
			background: #ccc
			box-shadow: 2px 2px 2px #000;
			height 12px
			width 120px

			position absolute
			top 16px;
			left: 16px;
			.stripes
				background red
				// background linear-gradient(45 deg, red, red 10px, white 10px, white 20px, red 20px, red 30px, white 30px, white 40px, red 40px, red 50px, white 50px, white 60px)
				background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255,255,255,1) 10px, rgba(255,255,255,1) 21px);
				height 6px
				width 110px

.camera-container
	.circle
		flex()
		align center
		just-content center
		background: radial-gradient(circle at 50% 120%,  #ddd, white 80%, #000000 100%)
		border-radius: 50%;
		box-shadow 8px 8px 15px #000
		height: 70px;
		width: 70px;
		perspective 1000px
		perspective-origin 50% 50%
		transform-style: preserve-3d;
		.top
			background-image url("top.png")
			background-repeat no-repeat
			background-postion center
			background-size contain 
			height 45px
			width 84px
			z-index: 2
			
			position absolute
			top -12px
			left -7px
		.camera-eye
			animation(camera 10s infinite linear)
			background: linear-gradient(45deg, #222, #444 30%, #444 35%, #222);
			border-radius 50%
			height 42px
			margin 10px 0 0 0
			width 42px
			
			position absolute
			left 14px
			top 14px
			.inner-eye
				flex()
				just-content center
				align center
				background: radial-gradient(circle, #111 30%, rgba(255, 255, 255, 0.7));
				border-radius 50%
				height 42px
				width 42px
				.yacircle
					animation colour 3s infinite linear
					border 3px dotted lighten(skyblue, 10%)
					border-radius 50%
					height 20px
					width 20px
					
.door-container
	.door
		flex()
		box-shadow -8px -8px 15px #000
		height 70px
		position relative
		left 0
		width 240px
		.sensor
			flex()
			align center
			just-content center
			background #999
			border-radius 0 0 9px 9px
			height 6px
			width 16px
			position absolute
			left 112px
			top -8px
		.el
			background linear-gradient(45deg, #eee, white 25px, lighten(skyblue, 65%) 50px, white 70px)
			height 70px
			width 50px
			border 5px solid #ccc
			// border-image: linear-gradient(to top, #777, rgba(0, 0, 0, 0)) 1 100%;
			
			position absolute
		.staying-left
			background linear-gradient(45deg, lighten(skyblue, 20), white 30px, #ddd 40px, white 65px)
			left 0
		.moving-left
			animation(open-left 10s infinite ease)
			border-color #bbb
			left 60px
		.staying-right
			background linear-gradient(45deg, lighten(skyblue, 20), white 30px, #ddd 40px, white 65px)
			left 180px
		.moving-right
			animation(open-right 10s infinite ease)
			border-color #bbb
			left 120px
			
// landing

section.info
	background #222
	box-shadow 0 0 10px #999
	h = 100vh
	min = 112px
	min-height "calc(%s - %s)" % (h min)
	.page-container
		flex()
		direction row
		color #999
		font text
		margin 0 auto
	article
		flex()
		direction column
		align center
		margin 70px 50px 30px 50px
		h3
			color #fff
			font-size: 24px
			text-align center
		p
			
			font-size: 16px
			line-height 1.5
			
			// if the text is long it is better to be left-aligned
			text-align center

section.contacts
	background #222
	min-height 100vh
	.page-container
		flex()
		direction column
		align center
		article
			p
				color white
				margin 40px 10px
				span 
					font-weight 700	

section.request
	border-box(50px)
	box-shadow 0 0 10px black
	background skyblue
	min-height 100vh
	.page-container
		flex()
		direction column
		align center
		h2
			color white
			font text
			font-size 2rem
		form
			flex()
			just-content center
			wrap()
			max-width: 960px
			fieldset
				border none
				flex()
				direction column
				margin 0
				padding 0
				input, textarea
					border-box(10px 20px)
					border 1px solid transparent
					border-radius 3px
					color #555
					font text
					font-weight bold
					margin: 10px
					outline none
					&:hover, &:focus
						background white
						box-shadow 0 0 10px darken(skyblue, 40)
						border 1px solid darken(skyblue, 30)
			fieldset.description
				height 240px
				margin 0 0 0 20px
				width 450px
				textarea
					resize none
					height 100%
					margin 10px auto
					width 100%
			section
				display block
				margin 30px 0 0 0 
				width 100%
				button
					background lighten(skyblue, 15)
					border-box(10px 20px)
					border 1px solid transparent
					border-radius 0
					color #555
					font text
					font-weight bold
					float right
					outline none
					text-transform uppercase
					&:hover, &:focus
							box-shadow 0 0 10px darken(skyblue, 40)
							border 1px solid darken(skyblue, 30)

// add

.add
	background #222
	h = 100vh
	min = 112px
	min-height "calc(%s - %s)" % (h min)
	article
		color white

// media


@media (max-width: 1200px)
	main
		.info
			.page-container
				article
					max-width 600px
					margin 30px

@media (max-width: 960px)
	main
		.info
			.page-container
				direction column
				article
					max-width 600px
					margin 30px auto

@media (max-width: 840px)
	main
		.request
			form
				width 100%
				fieldset
					max-width 300px
					input
						width 100%
				fieldset.description
					width 300px

@media (max-width: 660px)
	header
		padding 0
		.container
			h1
				font-size 25px 
				padding 10px 0 0 30px
	main
		.info
			padding 30px
		.request
			padding: 30px
			.page-container
				form
					fieldset
						max-width: 300px
						width 100%
						input
							margin: 10px 0
					fieldset.description
						margin 0
